# DCS Statistics Docker Configuration
# Copy this file to .env and adjust as needed

# Web server port (default: 9080)
WEB_PORT=9080

# Site URL (change this to your actual domain/IP for production)
SITE_URL=http://localhost:9080

# PHP Memory Limit
PHP_MEMORY_LIMIT=256M

# Redis Memory Limit
REDIS_MEMORY_LIMIT=256mb

# Environment (development/production)
APP_ENV=production

# Debug mode (true/false)
APP_DEBUG=false

# Timezone
TZ=UTC